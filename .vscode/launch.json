{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/run.js",
      "useWSL": true
    },
    {
      "type": "node",
      "request": "launch",
      "remoteRoot": "${workspaceRoot}",
      "localRoot":  "${workspaceRoot}",
      "name": "Nodemon server",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/run.js",
      "restart": true,
      "sourceMaps": true,
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "useWSL": true
    },
  ]
}
